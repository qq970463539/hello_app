<% provide(:title, @user.name) %>

<div class="row">

  <aside class="col-md-4 text-center">
    <section class="user_info">
      <%= gravatar_for @user, size: 120 %>
      <h1 class="mt-3"><%= @user.name %></h1>
      <p class="text-muted"><%= @user.email %></p>
    </section>
  </aside>

  <div class="col-md-8">
    <h2 class="mb-4">ユーザー情報</h2>

    <p class="text-muted">
      ここは <%= @user.name %>の profile page.
    </p>

  </div>
</div>