<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <div class="card text-center mb-4">
      <div class="card-body">
        <%= gravatar_for @user, size: 120, class: "mb-3" %>
        <h3><%= @user.name %></h3>
        <p class="text-muted"><%= @user.email %></p>
      </div>
    </div>
  </aside>

  <div class="col-md-8">
    <%= render "shared/stats" %>

    <% if logged_in? && current_user != @user %>
      <div class="mb-3">
        <%= render "follow_form" %>
      </div>
    <% end %>

    <% if @microposts.any? %>
      <h4 class="mb-3">
        Microposts <span class="text-muted">(<%= @microposts.count %>)</span>
      </h4>

      <ol class="microposts list-unstyled">
        <%= render @microposts %>
      </ol>

      <div class="mt-3">
        <%= will_paginate @microposts %>
      </div>
    <% else %>
      <div class="alert alert-secondary">
        このユーザーはまだ投稿していません。
      </div>
    <% end %>
  </div>
</div>