<% provide(:title, "Log in") %>

<h1>ログイン</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(url:login_path,scope: :session, local: true) do |f| %>

        <div class="form-group">
            <%= f.label :メール %>
            <%= f.email_field :email,class:"from-control" %>
        </div>

    <div class="form-group">
        <%= f.label :パスワード %>
        <%= f.password_field :password,class:"from-control" %> 
    </div>

    <div class="form-check mb-3">
        <%= f.check_box :remember_me, ckass: "form-check-input" %>
        <%= f.label :remember_me, "ログインを記憶",class:"form-check-label" %>
    </div>

     <%= f.submit "ログイン", class:"btn btn-primary" %>
     <% end %>
    </div>
</div>